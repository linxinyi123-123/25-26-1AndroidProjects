<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android界面组件实验"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. ListView示例"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_login_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. 登录对话框"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_menu_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. 菜单测试"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_action_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. 上下文操作模式"
        android:textSize="16sp" />

</LinearLayout>