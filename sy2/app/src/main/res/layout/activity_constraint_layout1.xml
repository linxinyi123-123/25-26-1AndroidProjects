<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#007D6F"
        android:text="ConstraintLayoutTest"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:text="Input"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:textColor="#A0A0A0"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#BABA98"
        android:text="0.0"
        android:textAlignment="textEnd"
        android:textColor="#575748"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input" />

    <Button
        android:id="@+id/chain1_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chain1_8"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/result"  />

    <Button
        android:id="@+id/chain1_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        app:layout_constraintStart_toEndOf="@id/chain1_7"
        app:layout_constraintEnd_toStartOf="@id/chain1_9"
        app:layout_constraintTop_toTopOf="@id/chain1_7" />

    <Button
        android:id="@+id/chain1_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        app:layout_constraintStart_toEndOf="@id/chain1_8"
        app:layout_constraintEnd_toStartOf="@id/chain1_divide"
        app:layout_constraintTop_toTopOf="@id/chain1_7"/>

    <Button
        android:id="@+id/chain1_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintStart_toEndOf="@id/chain1_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chain1_7"/>

    <Button
        android:id="@+id/chain2_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chain2_5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/chain1_7"  />

    <Button
        android:id="@+id/chain2_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/chain2_4"
        app:layout_constraintEnd_toStartOf="@id/chain2_6"
        app:layout_constraintTop_toTopOf="@id/chain2_4" />

    <Button
        android:id="@+id/chain2_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        app:layout_constraintStart_toEndOf="@id/chain2_5"
        app:layout_constraintEnd_toStartOf="@id/chain2_mutiply"
        app:layout_constraintTop_toTopOf="@id/chain2_4"/>

    <Button
        android:id="@+id/chain2_mutiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        app:layout_constraintStart_toEndOf="@id/chain2_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chain2_4"/>

    <Button
        android:id="@+id/chain3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chain3_2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/chain2_4"  />

    <Button
        android:id="@+id/chain3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintStart_toEndOf="@id/chain3_1"
        app:layout_constraintEnd_toStartOf="@id/chain3_3"
        app:layout_constraintTop_toTopOf="@id/chain3_1" />

    <Button
        android:id="@+id/chain3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintStart_toEndOf="@id/chain3_2"
        app:layout_constraintEnd_toStartOf="@id/chain3_plus"
        app:layout_constraintTop_toTopOf="@id/chain3_1"/>

    <Button
        android:id="@+id/chain3_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintStart_toEndOf="@id/chain3_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chain3_1"/>

    <Button
        android:id="@+id/chain4_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chain4_0"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/chain3_1"  />

    <Button
        android:id="@+id/chain4_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintStart_toEndOf="@id/chain4_dot"
        app:layout_constraintEnd_toStartOf="@id/chain4_equals"
        app:layout_constraintTop_toTopOf="@id/chain4_dot" />

    <Button
        android:id="@+id/chain4_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        app:layout_constraintStart_toEndOf="@id/chain4_0"
        app:layout_constraintEnd_toStartOf="@id/chain4_minus"
        app:layout_constraintTop_toTopOf="@id/chain4_dot"/>

    <Button
        android:id="@+id/chain4_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/chain4_equals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chain4_dot"/>


</androidx.constraintlayout.widget.ConstraintLayout>